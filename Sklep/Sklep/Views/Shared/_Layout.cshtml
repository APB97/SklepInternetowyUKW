<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wypożyczalnia filmów</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        @Html.Action("CategoriesMenu", "Films")
        <div>
            @Html.Partial("_PartialLogin")
            <a id="koszyk" href="@Url.Action("Index", "Cart")">&#128717; (<span id="totalQuantity">@Html.Action("GetCartQuantity", "Cart")</span>)</a>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div id="stopka">
            <a href="@Url.Action("StaticSite", "Home", new { name = "onas" })">O nas</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "regulamin" })">Regulamin</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "metodyPlatnosci" })">Metody płatności</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "kontakt" })">Kontakt</a>
        </div>
    </footer>

    @RenderSection("Scripts", false)
</body>
</html>